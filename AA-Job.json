{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accountName": {
            "type": "string",
            "defaultValue": "ARM-Account"
        },
        "runbookName": {
            "type": "string",
            "defaultValue": "ARM-Runbook"
        },
        "jobId": {
            "type": "string",
            "defaultValue": "6a805987ff"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "Account-and-Runbook",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "ARM-TEST",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "name": "[concat(parameters('accountName'), '/', parameters('jobId'))]",
                            "type": "Microsoft.Automation/automationAccounts/jobs",
                            "apiVersion": "2017-05-15-preview",
                            "properties": {
                                "runbook": {
                                    "name": "[parameters('runbookName')]"
                                },
                                "parameters": {},
                                "dependsOn": [
                                    "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
                                ]
                            }
                        }
                    ]
                },
                "parameters": {}
            }
        }
    ]
}